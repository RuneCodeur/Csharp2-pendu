<UserControl x:Class="pendu.Views.Intro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pendu.Views"
        Focusable="True"
        PreviewKeyDown="UserControl_KeyDown"
        mc:Ignorable="d">
    <UserControl.Resources>
        <Storyboard x:Key="FadeInOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.5" />
        </Storyboard>
    </UserControl.Resources>
    <Grid>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Jeu du Pendu" VerticalAlignment="Center" FontSize="70" FontFamily="Inknut Antiqua" Margin="0,0,0,50" FontWeight="Bold" IsEnabled="False" SnapsToDevicePixels="True"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Jeu du Pendu" VerticalAlignment="Center" FontSize="70" FontFamily="Inknut Antiqua" Margin="0,0,5,55" FontWeight="Bold" IsEnabled="False" SnapsToDevicePixels="True" Foreground="#FFC13737"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Appuyez sur ENTRER" VerticalAlignment="Bottom" FontFamily="Inknut Antiqua" FontSize="16" Margin="0,0,0,50"/>
    </Grid>
</UserControl>
